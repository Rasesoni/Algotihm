#include <iostream>
#include <cmath>
using namespace std;
int main()  {
    double a=2;
    double b=4;
    double eps=0.000001;
    double d;
    do{
        // формула хорд
        // x=(a*f(b)-b*f(a))/(f(b)-f(a))
        d=((a*(3*b-4*log(b)-5)-b*(3*a-4*log(a)-5))/((3*b-4*log(b)-5)-(3*a-4*log(a)-5)));
        double f_d=3*d-4*log(d)-5;
        if (fabs(f_d)<eps){
            break;
        }
        if ((3*a-4*log(a)-5)*f_d<0){
            b=d;
        }
        else{
            a=d;
        }
        
    }while((b-a)>=eps);
    cout<<"res:"<<d<<endl;
    return 0;
}
////////////////////////////////////////
#include <iostream>
#include <cmath>
using namespace std;
int main()  {
    // [2-4] f(x)=3x-4lnx-5
    double a=2;// начало интервала
    double b=30;// конец интервала 
    double epsilon=0.0001;
    double c;
    int counter = 0;
    if((3*a-4*log(a)-5)*(3*b-4*log(b)-5)>=0){
        cout<<"No res"<< endl;
        return 1 ;// Завершение программы с кодом 1
    }
    while((b-a)>=epsilon){
        counter++;
        c=(a+b)/2;// первая середина 
        cout<<counter<<':'<<c<<endl;
        
        double f_c=3*c-4*log(c)-5;
        
        if(fabs(f_c)<epsilon){
            break;
        }
        
        if ((3*a-4*log(a)-5)*f_c<0){
            // корень в левой части
            b=c;
        }
        else{
            a=c;
        }
        
    }
    
    
    cout<<"result:"<<c<<endl;
    return 0;
}
