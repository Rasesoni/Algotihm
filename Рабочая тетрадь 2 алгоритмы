Задание 2
#include <iostream>
#include <iostream>
using namespace std;

int main() {
    // Пример массива (можно менять)
    int arr[] = {1,3,5,7,8,4};
    int n = end(arr)-begin(arr);
    if (n < 3) {
        cout << "Массив слишком короткий, он не может быть горным." << endl;
        return 0;
    }
    int left = 1;
    int right = n - 2;
    int peak = -1;
    while (left < right) {
        int mid = (left + right) / 2;
        if (arr[mid] < arr[mid + 1]) {
            left = mid + 1; 
        } else {
            right = mid;    
        }
    }
    peak = left; 
    bool isMountain = true;
    for (int i = 1; i <= peak; i++) {
        if (arr[i] <= arr[i - 1]) {
            isMountain = false;
            break;
        }
    }
    if (isMountain) {
        for (int i = peak + 1; i < n; i++) {
            if (arr[i] >= arr[i - 1]) {
                isMountain = false;
                break;
            }
        }
    }
    if (isMountain) {
        cout << "Массив является горным. Индекс пика = " << peak << endl;
    } else {
        cout << "Массив НЕ является горным." << endl;
    }

    return 0;
}
